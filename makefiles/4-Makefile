CC =gcc
SRC =main.c school.c
OBJ =$(SRC:.c=.o)
NAME =school
RM =rm 
CFLAGS=-Wall -Werror -Wextra -pedantic

all: $(OBJ) 
	$(CC) $(OBJ) -o $(NAME) $(CFLAGS)

re: oclean
	$(CC) $(OBJ) -o $(NAME) $(CFLAGS)

clean:
	$(RM) -f *~ $(NAME)

oclean: 
	$(RM) -f $(OBJ) 

fclean:
	$(RM) -f *~ $(NAME)
	$(RM) -f $(OBJ)


